<div class="notice">
<p id="notice">
  <%if flash[:notice] %>
    <%= flash[:notice]  %>
  <% end %>
</p>
</div>

<div class="container px-5 px-md-0">
  <div class="row">
    
    
    <div class="col-md-3">
      <%= render "layouts/form", user: @user %>
      <%= render "layouts/create", book: @book %>
    </div>
    
    
    <div class="offset-md-1 col-md-8">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
  
  <thead>
    <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
    </tr>
  </thead>
    
  <tbody>
  <% @books.each do |book| %>
    <tr><td>
      <!--https://qiita.com/iverson3kobe0824/items/3baa1d57843fbde6cd19-->
      <%= link_to user_path(book.user) do %>
      <%= attachment_image_tag  @user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
      <% end %>

    </td><td>
      <%= link_to book_path(book) do %>
      <%= book.title %>
    <% end %>
    
    </td><td>
      <%= book.body %>
    </td><td><% if book.favorited_by?(current_user) %>
      <td>
        <%= link_to book_favorites_path(book), method: :delete do %>
        <p class="like-btn">♥<%= book.favorites.count %></p>
        <% end %>
      </td>
      <% else %>
      <td>
        <%= link_to book_favorites_path(book), method: :post do %>
          ♡<%= book.favorites.count %>
        <% end %>
      </td>
        <% end %>
      コメント数：<%= book.post_comments.count %>
    </td></tr>
    <% end %>
  </tbody>
  
      </table>
    </div>
  </div>
</div>