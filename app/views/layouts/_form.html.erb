<h2>User info</h2>
 <%= attachment_image_tag user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    
  <tr>
    <td>name</td>
    <td><%= user.name %></td>
  </tr>
  
  <tr>
    <td>introduction</td>
    <td><%= user.introduction %></td>
  </tr>
    <tr>
	  <th>follows</th>
	  <th><%= link_to user.follower.count, following_user_path(user) %></th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th><%= link_to user.followed.count, followers_user_path(user) %></th>
  </tr>	  
  </tbody>
</table>

<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST, class: "btn btn-primary mb-3" %>
  <% else %>
    <%= link_to 'フォローする', follow_path(user.id), method: :POST, class: "btn btn-success mb-3" %>
  <% end %>
<% end %>

<div class="row">
    <%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>